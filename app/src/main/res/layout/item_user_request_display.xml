<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgItemUserRequestProfile"
                    tools:src="@drawable/profile_image"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/tvNewMessage"
                    android:visibility="gone"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="@android:color/white"
                    android:padding="3dp"
                    android:background="@drawable/drawable_circle"/>

            </FrameLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRequestProfileName"
                        tools:text="Dashrath sindhav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgOnlineStatus"
                        android:layout_marginStart="40dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:srcCompat="@drawable/online" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imgPhotoMessage"
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_image_photo"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/tvItemRequestStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:layout_marginEnd="20dp"
                        android:textSize="14sp"
                        tools:text="My status ;skjkflksdjflg\" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>