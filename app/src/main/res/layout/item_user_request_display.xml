<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgItemUserRequestProfile"
                tools:src="@drawable/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp" />


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRequestProfileName"
                        tools:text="Dashrath sindhav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgOnlineStatus"
                        android:layout_marginStart="40dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/online" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvItemRequestStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginEnd="20dp"
                        android:textSize="14sp"
                        tools:text="My status" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/btnRequestAccept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:textSize="16sp"
                            tools:text="Accept"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/btnRequestCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:textSize="16sp"
                            android:text="Cancel"
                            android:textAllCaps="false"
                           android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>