<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgItemMessageProfile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tvReceiverMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imgItemMessageProfile"
        android:background="@drawable/receiver_messages_layout"
        android:text="Recever Side"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvSenderMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/tvReceiverMessageText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sender_messages_layout"
        android:text="Sender Side"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/black"/>

</RelativeLayout>