<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.phonelogin.PhoneLoginActivity">

    <EditText
        android:id="@+id/etPhoneNumberLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/drawable_send_edittext"
        android:padding="10dp"
        android:hint="Write phone number here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/drawable_phone"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etVerificationCode"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/etPhoneNumberLogin"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:hint="Write verification code here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/drawable_password"
        android:drawablePadding="12dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnSendVerificationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttons"
        android:padding="8dp"
        android:text="Send verification code"
        android:layout_below="@+id/etVerificationCode"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnVerifyLogin"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:padding="8dp"
        android:text="Verify"
        android:layout_below="@+id/btnSendVerificationCode"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"/>

</RelativeLayout>